{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "OpenNMS": {
            "type": "object",
            "properties": {
                "global": {
                    "type": "object",
                    "properties": {
                        "developmentMode": {
                            "type": "boolean"
                        },
                        "image": {
                            "type": "object",
                            "properties": {
                                "repository": {
                                    "type": "string"
                                },
                                "tag": {
                                    "type": "string"
                                }
                            }
                        },
                        "openTelemetry": {
                            "type": "object",
                            "properties": {
                                "env": {
                                    "type": "object",
                                    "properties": {
                                        "OTEL_PROPAGATORS": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "otlpTracesEndpoint": {
                                    "type": "null"
                                }
                            }
                        }
                    }
                },
                "minion": {
                    "type": "object",
                    "properties": {
                        "customCertificateAuthority": {
                            "type": "boolean"
                        },
                        "customHostAliases": {
                            "type": "array"
                        },
                        "extraInitContainers": {
                            "type": "array"
                        },
                        "extraMounts": {
                            "type": "array"
                        },
                        "extraVolumes": {
                            "type": "array"
                        },
                        "gatewayHost": {
                            "type": "string"
                        },
                        "grpcClientKeystorePassword": {
                            "type": "string"
                        },
                        "id": {
                            "type": "string"
                        },
                        "imagePullPolicy": {
                            "type": "string"
                        },
                        "imageShortName": {
                            "type": "string"
                        },
                        "netflow5ListenerPort": {
                            "type": "integer"
                        },
                        "netflow9ListenerPort": {
                            "type": "integer"
                        },
                        "netflowListenerPort": {
                            "type": "integer"
                        },
                        "port": {
                            "type": "integer"
                        },
                        "replicas": {
                            "type": "integer"
                        },
                        "resources": {
                            "type": "object",
                            "properties": {
                                "limits": {
                                    "type": "object",
                                    "properties": {
                                        "cpu": {
                                            "type": "string"
                                        },
                                        "memory": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "requests": {
                                    "type": "object",
                                    "properties": {
                                        "cpu": {
                                            "type": "string"
                                        },
                                        "memory": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "serviceName": {
                            "type": "string"
                        },
                        "sshPort": {
                            "type": "integer"
                        },
                        "trapsListenerPort": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "hostname": {
            "type": "string"
        },
        "nodeRestrictions": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "key": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            }
        },
        "port": {
            "type": "integer"
        },
        "protocol": {
            "type": "string"
        }
    }
}
