                                },
                                "tag": {
                                    "type": "string"
                                }
                            }
                        },
                        "openTelemetry": {
                            "type": "object",
                            "properties": {
                                "env": {
                                    "type": "object",
                                    "properties": {
                                        "OTEL_PROPAGATORS": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "otlpTracesEndpoint": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "citus": {
            "type": "object",
            "properties": {
                "adminPassword": {
                    "type": "string"
                },
                "adminUser": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "hostname": {
            "type": "string"
        },
        "keycloak": {
            "type": "object",
            "properties": {
                "adminPassword": {
                    "type": "string"
                },
                "adminUsername": {
                    "type": "string"
                },
                "configmapName": {
                    "type": "string"
                },
