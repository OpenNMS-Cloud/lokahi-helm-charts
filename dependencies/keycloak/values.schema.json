                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "serviceName": {
                    "type": "string"
                },
                "tlsSecretName": {
                    "type": "string"
                }
            }
        },
        "nodeRestrictions": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "key": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            }
        },
        "port": {
            "type": "integer"
        },
        "protocol": {
            "type": "string"
        },
        "tls": {
            "type": "object",
            "properties": {
                "certificateGeneration": {
                    "type": "boolean"
                },
                "enabled": {
                    "type": "boolean"
                }
            }
        }
