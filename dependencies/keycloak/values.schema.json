{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "OpenNMS": {
            "type": "object",
            "properties": {
                "global": {
                    "type": "object",
                    "properties": {
                        "enableJsonLogging": {
                            "type": "boolean"
                        },
                        "image": {
                            "type": "object",
